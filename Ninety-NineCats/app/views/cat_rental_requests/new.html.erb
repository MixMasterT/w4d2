<% cat = Cat.find_by(id: params[:cat_id]) %>

<h1>Request to Rent <%= cat.name %></h1>

<form action='<%= cat_cat_rental_requests_path %>' method='post'>
  <input type='hidden' name='cat_rental_request[cat_id]' value='<%= cat.id %>'>
  <label>Start date
    <input type='date' name='cat_rental_request[start_date]'>
  </label>

  <br><br>

  <label>End date
    <input type='date' name='cat_rental_request[end_date]'>
  </label>

  <br><br>

  <input type='submit' value='Make Request'>
</form>
